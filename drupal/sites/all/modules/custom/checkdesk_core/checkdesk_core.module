    'attributes' => array('class' => 'first-group')
  ));
  // Second group
  // reports, stories and updates
  $items = array();
  $items[] = array(
    'data' => l(t('Reports'), 'search', array(
      'attributes' => array('class' => array($a_class, 'reports-link')),
      'query' => array('type' => 'media'),
    )),
    'class' => array($li_class, 'reports'),
  );
  $items[] = array(
    'data' => l(t('Stories'), 'search', array(
      'attributes' => array('class' => array($a_class, 'stories-link')),
      'query' => array('type' => 'discussion'),
    )),
    'class' => array($li_class, 'stories'),
  );
  $items[] = array(
    'data' => l(t('Updates'), 'search', array(
      'attributes' => array('class' => array($a_class, 'updates-link')),
      'query' => array('type' => 'post'),
    )),
    'class' => array($li_class, 'updates'),
  );

  $second_group = theme('item_list', array(
    'items' => $items,
    'title' => '',
    'type' => 'ul',
    'attributes' => array('class' => 'second-group')
  ));

  // Third group
  // manage users and about checkdesk
  $items = array();
  if (user_access('administer users')) {
    $items[] = array(
      'data' => l(t('Administer users'), 'admin/people', array(
        'attributes' => array('class' => array($a_class, 'administer-users-link')),
      )),
      'class' => array($li_class, 'administer-users'),
    );
  }
  $items[] = array(
    'data' => l(t('About Checkdesk'), 'content/about-checkdesk', array(
      'attributes' => array('class' => array($a_class, 'about-checkdesk-link')),
    )),
    'class' => array($li_class, 'about-checkdesk'),
  );

  $third_group = theme('item_list', array(
    'items' => $items,
    'title' => '',
    'type' => 'ul',
    'attributes' => array('class' => 'third-group')
  ));

  return theme('checkdesk_core_main_navigation', array(
    'first_group' => $first_group,
    'second_group' => $second_group,
    'third_group' => $third_group,
  ));
}
