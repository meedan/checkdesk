  return user_access('add report to story') ?
    t('Add Report "!title" to Story', array(
      '!title' => views_trim_text(array('max_length' => 30, 'ellipsis' => TRUE), $report->title))
    ) :
    t('Suggest Report "!title" to Story', array(
